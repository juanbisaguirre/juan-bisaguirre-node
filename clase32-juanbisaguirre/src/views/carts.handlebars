<form method="get" action="/api/products">
      <button type="submit">Volver a productos</button>
</form>

<h1>Carrito de Compras</h1>
<p>ID: {{cart._id}}</p>
{{#if cart.productos.length}}
  <ul>
  {{#each cart.productos}}
    <li>
      {{this.product.title}} -
      Precio: {{this.product.price}} -
      Categor√≠a: {{this.product.category}} -
      Cantidad: {{this.quantity}}
    </li>
  {{/each}}
  </ul>
{{else}}
  <p>No hay productos en el carrito</p>

{{/if}}

<a href="/api/carts/{{cart._id}}/purchase">Comprar carrito</a>
